<Window x:Class="second_pr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:second_pr"
        mc:Ignorable="d"
        Title="Игра-кликер" Height="450" Width="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border
            BorderBrush="Black"
            BorderThickness="1"
            Margin="10"
            Background="#FFFDFDFD">
            <Grid>
                <Image
                    Margin="10,10,10.2,185.4"
                    Source="/imag/image.jpg"/>
                <Label 
                     Content="Основные характеристики персонажа:"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     FontWeight="Bold"
                     Margin="10,0,0,160"/>
                <Label 
                     Content="Жизненные показатели:100"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     FontWeight="Bold"
                     Margin="10,0,0,130"/>
                <Label 
                     Content="Броня:100"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     FontWeight="Bold"
                     Margin="10,0,0,100"/>
                <Label 
                     Content="Уровень: 1"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     FontWeight="Bold"
                     Margin="10,0,0,70"/>
                <Label 
                      Content="Опыт: 0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      FontWeight="Bold"
                      Margin="10,0,0,40"/>
                <Label 
                      Content="Монеты: 0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      FontWeight="Bold"
                      Margin="10,0,0,10"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Background="#FFFDFDFD" Grid.Column="1">
            <Grid>
                <Image Margin="10,10,10.2,185.4"  Source="/imag/image4.jpg" />
                <Label 
                      Content="Основные характеристики персонажа:"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      FontWeight="Bold"
                      Margin="10,0,0,160"/>
                <Label 
                      Content="Жизненные показатели:100"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      FontWeight="Bold"
                      Margin="10,0,0,130"/>
                <Label 
                     Content="Броня:100"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     FontWeight="Bold"
                     Margin="10,0,0,100"/>
            </Grid>
        </Border>
    </Grid>
</Window>
